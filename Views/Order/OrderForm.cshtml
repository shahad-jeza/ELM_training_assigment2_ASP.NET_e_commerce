@model ECommerceApp.Models.Order

<h2>Place Order</h2>
<form asp-action="PlaceOrder" method="post">
    <div class="form-group">
        <label asp-for="UserId" class="control-label"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrderDetails[0].ProductId" class="control-label"></label>
        <input asp-for="OrderDetails[0].ProductId" class="form-control" />
        <span asp-validation-for="OrderDetails[0].ProductId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrderDetails[0].Quantity" class="control-label"></label>
        <input asp-for="OrderDetails[0].Quantity" class="form-control" />
        <span asp-validation-for="OrderDetails[0].Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Place Order</button>
</form>