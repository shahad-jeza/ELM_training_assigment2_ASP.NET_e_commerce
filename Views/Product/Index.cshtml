@model List<ECommerceApp.Models.Product>

<h2>Product List</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <a href="/Order/OrderForm?productId=@product.ProductId" class="btn btn-success btn-sm">Place Order</a>
                </td>
            </tr>
        }
    </tbody>
</table>